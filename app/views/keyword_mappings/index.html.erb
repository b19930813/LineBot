<p id="notice"><%= notice %></p>

<h1>Keyword Mappings</h1>

<%= link_to '新建Keyword對應', new_keyword_mapping_path,class:"btn btn-info btn-xs" %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>關鍵字</th>
      <th>訊息</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keyword_mappings.each do |keyword_mapping| %>
      <tr>
        <td><%= keyword_mapping.keyword %></td>
        <td><%= keyword_mapping.message %></td>
        <td><%= link_to '顯示內容', keyword_mapping ,class:"btn btn-primary btn-xs"%></td>
        <td><%= link_to '編輯', edit_keyword_mapping_path(keyword_mapping),class:"btn btn-primary btn-xs" %></td>
        <td><%= link_to '刪除', keyword_mapping, method: :delete, data: { confirm: '確定要刪除嗎?' },class:"btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= paginate @keyword_mappings %>
<br>


